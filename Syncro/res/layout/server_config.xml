<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="fill_parent"
	a:layout_height="fill_parent">
	<TextView a:id="@+id/server_config_details_text"
			  a:layout_width="fill_parent"
			  a:layout_height="wrap_content"
			  a:text="Details"/>
	<ListView
		a:id="@+id/server_config_details_list"
		a:layout_width="fill_parent"
		a:layout_height="wrap_content"
		a:layout_below="@id/server_config_details_text" />
	<Button
		a:id="@+id/server_config_sync_now"
		a:layout_width="wrap_content"
		a:layout_height="wrap_content"
		a:text="Sync Now"
		a:layout_below="@id/server_config_details_list" />
	<Button
		a:id="@+id/server_config_delete_server"
		a:layout_width="wrap_content"
		a:layout_height="wrap_content"
		a:text="Delete Server"
		a:layout_toRightOf="@id/server_config_sync_now"
		a:layout_centerVertical="true" a:layout_below="@id/server_config_details_list"/>
	<TextView 
		a:id="@+id/server_config_folder_list_text"
		a:layout_width="fill_parent"
		a:layout_height="wrap_content"
		a:text="Folder List"
		a:layout_below="@id/server_config_sync_now"/>
	<ListView
		a:id="@+id/server_config_folder_list"
		a:layout_width="fill_parent"
		a:layout_height="fill_parent"
		a:layout_below="@id/server_config_folder_list_text" />
</RelativeLayout>


