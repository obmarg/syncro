<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="wrap_content"
	a:layout_height="wrap_content">
	<TextView
		a:id="@+id/dialog_addserver_servernametext"
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:layout_alignParentRight="true"
		a:text="Server Name" />
	<EditText a:id="@+id/dialog_addserver_servername"
		a:inputType="textUri"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:background="@android:drawable/editbox_background"
        a:layout_below="@id/dialog_addserver_servernametext" />
       <TextView
		a:id="@+id/dialog_addserver_addresstext"
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:layout_alignParentRight="true"
		a:text="Address"
		a:layout_below="@id/dialog_addserver_servername" />
	<EditText a:id="@+id/dialog_addserver_address"
		a:inputType="textUri"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:background="@android:drawable/editbox_background"
        a:layout_below="@id/dialog_addserver_addresstext" />
    <TextView
		a:id="@+id/dialog_addserver_porttext"
		a:layout_width="match_parent"
		a:layout_height="wrap_content"
		a:layout_alignParentRight="true"
		a:layout_below="@id/dialog_addserver_address"
		a:text="Port" />
	<EditText a:id="@+id/dialog_addserver_port" 
		a:inputType="number"
        a:layout_width="60sp"
        a:layout_height="wrap_content"
        a:background="@android:drawable/editbox_background"
        a:layout_below="@id/dialog_addserver_porttext" />
	<Button
		a:id="@+id/dialog_addserver_ok"
		a:layout_width="60sp"
		a:layout_height="wrap_content"
		a:text="OK"
		a:layout_below="@id/dialog_addserver_port" />
	<Button
		a:id="@+id/dialog_addserver_cancel"
		a:layout_width="wrap_content"
		a:layout_height="wrap_content"
		a:text="Cancel"
		a:layout_below="@id/dialog_addserver_port"
		a:layout_toRightOf="@id/dialog_addserver_ok" />
</RelativeLayout>