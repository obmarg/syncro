<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="fill_parent"
	a:layout_height="fill_parent">
	<LinearLayout a:id="@+id/LinearLayout01" 
		a:layout_toLeftOf="@+id/folder_filter_list_add_filter" 
		a:layout_width="wrap_content" a:layout_height="wrap_content" a:orientation="horizontal" 
		a:layout_centerHorizontal="true">
		<Button a:layout_width="wrap_content" 
			a:layout_height="wrap_content" a:id="@+id/folder_filter_list_add_filter" 
			a:text="Add Filter">
		</Button>
	</LinearLayout>
		<TextView 
			a:layout_toLeftOf="@+id/folder_filter_list_add_filter" 
			a:layout_below="@+id/LinearLayout01" 
			a:layout_width="wrap_content" 
			a:layout_height="wrap_content" 
			a:layout_centerHorizontal="true" 
			a:text="Include Filters" 
			a:layout_alignParentLeft="true" 
			a:id="@+id/folder_filter_list_include_filters_text">
		</TextView>
	<ListView 
		a:layout_width="wrap_content" 
		a:layout_height="wrap_content" 
		a:layout_centerHorizontal="true" 
		a:id="@+id/folder_filter_list_include_filters" 
		a:layout_below="@id/folder_filter_list_include_filters_text">
	</ListView>
	<TextView
		a:layout_below="@+id/folder_filter_list_include_filters" 
		a:layout_width="wrap_content" 
		a:layout_height="wrap_content" 
		a:layout_centerHorizontal="true" 
		a:id="@+id/folder_filter_list_filename_filters_text" 
		a:text="Filename Filters" 
		a:layout_alignParentLeft="true">
	</TextView>
	<ListView 
		a:layout_width="wrap_content" 
		a:layout_height="wrap_content" 
		a:layout_centerHorizontal="true" 
		a:id="@+id/folder_filter_list_filename_filters" 
		a:layout_below="@id/folder_filter_list_filename_filters_text">
	</ListView>
</RelativeLayout>